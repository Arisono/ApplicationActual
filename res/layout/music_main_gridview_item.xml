<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_gridview_item_selector"
    android:padding="6.0dip" >
    <ImageView
        android:id="@+id/gridview_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/icon_local_music" />
    <TextView
        android:id="@+id/gridview_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridview_item_iv"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/gridview_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gridview_item_name"
        android:textColor="@color/white" />
</RelativeLayout>