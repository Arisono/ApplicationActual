<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item 
        android:state_checked="true">
        <shape>
            <solid android:color="@color/white" />
            <!-- 边框颜色 -->
            <stroke android:width="0.5dp" android:color="@color/white" />
            <!--渐变  -->
        <!-- <gradient android:angle="45" android:centerColor="#99ff99" android:endColor="#FFF8DC" android:startColor="#FFF8DC" /> -->
            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
        </shape>
        </item>
        <item android:state_selected="false">
            <shape>
            <solid android:color="@color/light_primary" />
            <stroke android:width="0.5dp" android:color="@color/white" 
               />
          <!--   <gradient android:angle="45" android:centerColor="#99ff99" android:endColor="#FFF8DC" android:startColor="#FFF8DC" /> -->
            <padding android:bottom="0.5dp" android:left="0.5dp" android:right="0.5dp" android:top="0.5dp" />
        </shape>
        </item>
</selector>