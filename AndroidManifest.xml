<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.demo"
    android:versionCode="1"
    android:versionName="1.0" >
    <!--minSdkVersion 
     Fragment 11 Version
     -->
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    <!--权限 -->
    <!--网络权限  -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_logo_me"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <!--
    	 android:screenOrientation="portrait" 限制屏幕为纵向
      	-->
        <activity
            android:name="com.app.demo.activity.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!--service  -->
        <!--android:exported="false" 禁止外部访问service  -->
        <service android:name=".service.MyService"
                 android:exported="false">  
            <intent-filter>  
                 <action android:name="android.intent.action.MyService" />  
                 <category android:name="android.intent.category.DEFAULT" />  
            </intent-filter>  
        </service> 
        
        <!--  activity  -->
        <activity 
         android:name=".service.activity.StartService">
        </activity>
        
        <!-- min version sdk is 16 
             android:parentActivityName
        -->
        <activity 
            android:name="com.app.demo.activity.common.CalendarActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:parentActivityName="com.app.demo.activity.MainActivity"
            android:label="日历">
        </activity>
        
       <!--新建日历  -->
        <activity 
	        android:name="com.app.demo.activity.common.NewSchedule"
	        android:screenOrientation="portrait"
	        android:parentActivityName="com.app.demo.activity.common.CalendarActivity"
	        android:launchMode="singleTask"
	        android:windowSoftInputMode="stateVisible|adjustResize"
	        android:configChanges="keyboardHidden|orientation"
	        android:logo="@null"
	        android:label="返回">
        </activity>
        
         <activity 
            android:name="com.app.demo.activity.BtSelectActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:parentActivityName="com.app.demo.activity.MainActivity"
            android:label="类库">
        </activity>
        
    </application>

</manifest>
